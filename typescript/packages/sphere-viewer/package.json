{
  "name": "@subconsciousnetwork/sphere-viewer",
  "author": "Subconscious Inc.",
  "license": "Apache-2.0 OR MIT",
  "version": "0.1.0",
  "description": "A demo of Orb.js that renders Noosphere content from any IPFS gateway",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:tsc": "wireit",
    "clean": "wireit",
    "serve": "wireit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.1",
    "@subconsciousnetwork/orb": "*",
    "@web/dev-server": "^0.1.34",
    "lit": "^2.4.1",
    "lit-redux-watch": "^0.3.8",
    "reselect": "^4.1.7",
    "typescript": "~4.8.2",
    "vite": "^3.2.3",
    "vite-plugin-wasm": "^3.1.0",
    "wireit": "^0.9.0"
  },
  "wireit": {
    "build": {
      "dependencies": [
        {
          "script": "build:tsc",
          "cascade": false
        }
      ],
      "command": "vite build",
      "files": [
        "./lib/**",
        "./static/**",
        "./vite.config.js"
      ],
      "output": [
        "./dist/**"
      ]
    },
    "build:tsc": {
      "dependencies": [
        "../orb:build"
      ],
      "command": "tsc --pretty",
      "clean": "if-file-deleted",
      "files": [
        "../../tsconfig.base.json",
        "tsconfig.json",
        "./src/**/*.ts"
      ],
      "output": [
        "./lib/**",
        "./tsconfig.tsbuildinfo"
      ]
    },
    "serve": {
      "dependencies": [
        "build"
      ],
      "service": true,
      "command": "web-dev-server -r ./dist"
    },
    "clean": {
      "command": "rm -rf ./dist ./lib && rm -f ./tsconfig.tsbuildinfo"
    }
  }
}
