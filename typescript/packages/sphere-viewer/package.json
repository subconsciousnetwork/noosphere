{
  "name": "@subconsciousnetwork/sphere-viewer",
  "author": "Subconscious Inc.",
  "license": "Apache-2.0 OR MIT",
  "version": "0.1.0",
  "description": "A demo of Orb.js that renders Noosphere content from any IPFS gateway",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:tsc": "wireit",
    "clean": "wireit",
    "serve": "wireit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@subconsciousnetwork/orb": "*",
    "@web/dev-server": "^0.4.3",
    "lit": "^3.1.2",
    "lit-redux-watch": "^0.3.8",
    "reselect": "^5.1.0",
    "typescript": "~5.4.3",
    "vite": "^5.1.5",
    "vite-plugin-wasm": "^3.3.0",
    "vite-plugin-top-level-await": "^1.4.1",
    "wireit": "^0.14.4"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:tsc"
      ],
      "command": "vite build && ./scripts/finalize-index-html.sh",
      "files": [
        "./lib/**",
        "./public/**",
        "./vite.config.js",
        "./scripts/finalize-index-html.sh"
      ],
      "output": [
        "./dist/**"
      ]
    },
    "build:tsc": {
      "dependencies": [
        "../orb:build"
      ],
      "command": "tsc --pretty",
      "clean": "if-file-deleted",
      "files": [
        "../../tsconfig.base.json",
        "tsconfig.json",
        "./src/**/*.ts"
      ],
      "output": [
        "./lib/**",
        "./tsconfig.tsbuildinfo"
      ]
    },
    "serve": {
      "dependencies": [
        {
          "script": "build",
          "cascade": false
        }
      ],
      "service": true,
      "command": "web-dev-server -r ./dist"
    },
    "clean": {
      "command": "rm -rf ./dist ./lib && rm -f ./tsconfig.tsbuildinfo"
    }
  }
}
